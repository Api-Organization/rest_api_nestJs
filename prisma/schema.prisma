generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Links {
  id         String    @id @default(uuid())
  url        String
  note_id    String?
  created_at DateTime? @default(now())
  notes      Notes?    @relation(fields: [note_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model Notes {
  id           String    @id @default(uuid())
  title        String?
  content String?
  time         String?
  user_id      String?
  created_at   DateTime? @default(now())
  updated_at   DateTime? @default(now())
  users        Users?    @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  links        Links[]
  tags         Tags[]
}

model Tags {
  id      String  @id @default(uuid())
  name    String
  note_id String?
  user_id String?
  users   Users?  @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  notes   Notes?  @relation(fields: [note_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model Products {
  id          String        @id @default(uuid())
  name     String
  price       String?
  description String?
  photo       String?
  time        String?
  stock       String?
  created_at  DateTime?     @default(now())
  updated_at  DateTime?     @default(now())
  Permissions Permissions[]
  Faq         Faq[]
  Photos      Photos[]
  Reviewers    Reviewers[]
}

model Faq {
  id         String     @id @default(uuid())
  question   String
  answer     String
  created_at DateTime?  @default(now())
  updated_at DateTime?  @default(now())
  Products   Products[]
}

model Photos {
  id         String     @id @default(uuid())
  link       String
  created_at DateTime?  @default(now())
  updated_at DateTime?  @default(now())
  Products   Products[]
  Reviewers   Reviewers[]
}

model Reviewers {
  id         String     @id @default(uuid())
  name       String
  description  String?
  created_at DateTime?  @default(now())
  updated_at DateTime?  @default(now())
  Photos     Photos[]
  Products   Products[]
}

model Accounts {
  id          String        @id @default(uuid())
  site        String?
  tool        String?
  email       String?
  password    String?
  created_at  DateTime?     @default(now())
  updated_at  DateTime?     @default(now())
  permissions Permissions[]
}

model Permissions {
  id           String     @id @default(uuid())
  name         String?    @unique
  description String?
  created_at   DateTime?  @default(now())
  updated_at   DateTime?  @default(now())
  Accounts     Accounts[]
  Users        Users[]
  Products     Products[]
}

model Users {
  id            String        @id @default(uuid())
  name          String?
  number        String?
  status        String?
  payment       DateTime?
  role          String?
  email         String?       @unique
  password      String?
  permissions   Permissions[]
  refresh_Token String?
  created_at    DateTime?     @default(now())
  updated_at    DateTime?     @default(now())
  notes         Notes[]
  tags          Tags[]
}
